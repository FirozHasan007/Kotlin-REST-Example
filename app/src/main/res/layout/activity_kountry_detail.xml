<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginLeft="@dimen/margin_8dp"
            android:layout_marginRight="@dimen/margin_8dp"
            android:layout_marginBottom="@dimen/margin_8dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginBottom="@dimen/margin_8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/margin_8dp"
                    android:layout_marginRight="@dimen/margin_8dp"
                    android:layout_marginTop="@dimen/margin_8dp"
                    android:layout_marginBottom="@dimen/margin_8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/flag_image_view_detail"
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:scaleType="fitXY"
                            android:background="@color/black"
                            />

                        <TextView
                            android:id="@+id/name_text_view_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dhaka"
                            android:layout_marginLeft="@dimen/margin_8dp"
                            android:layout_gravity="center"
                            style="@style/DefaultTextView"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Capital:"
                            style="@style/DefaultTextView"/>

                        <TextView
                            android:id="@+id/capital_text_view_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dhaka"
                            android:layout_marginLeft="@dimen/margin_8dp"
                            style="@style/DefaultTextView"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Area:"
                            style="@style/DefaultTextView"/>

                        <TextView
                            android:id="@+id/area_text_view_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="50000"
                            android:textColor="@color/black"
                            android:layout_marginLeft="@dimen/margin_8dp"
                            style="@style/DefaultTextView"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Population:"
                            style="@style/DefaultTextView"/>

                        <TextView
                            android:id="@+id/population_text_view_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="16000000"
                            style="@style/DefaultTextView"
                            android:layout_marginLeft="@dimen/margin_8dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Region:"
                            style="@style/DefaultTextView"/>

                        <TextView
                            android:id="@+id/region_text_view_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="South Asia, Asia"
                            style="@style/DefaultTextView"
                            android:layout_marginLeft="@dimen/margin_8dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time Zone:"
                            style="@style/DefaultTextView"/>

                        <TextView
                            android:id="@+id/time_zone_text_view_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="UTC-06:00"
                            style="@style/DefaultTextView"
                            android:layout_marginLeft="@dimen/margin_8dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Language:"
                            style="@style/DefaultTextView"/>

                        <TextView
                            android:id="@+id/language_text_view_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bangla"
                            android:layout_marginLeft="@dimen/margin_8dp"
                            style="@style/DefaultTextView"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Currency:"
                            style="@style/DefaultTextView"/>

                        <TextView
                            android:id="@+id/currency_text_view_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Taka"
                            style="@style/DefaultTextView"
                            android:layout_marginLeft="@dimen/margin_8dp"/>

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <fragment
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment" />

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</ScrollView>